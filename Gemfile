source 'https://rubygems.org'

# Jekyll and related gems
gem 'jekyll', '~> 4.2'
gem 'jekyll-seo-tag'  # Core SEO functionality
gem 'jekyll-sitemap'  # Generates sitemap.xml
gem 'jekyll-feed'     # Generates RSS feed
gem 'jekyll-paginate-v2'
gem 'jekyll-archives', '~> 2.3.0'
gem 'jekyll-sass-converter', '~> 2.0'
gem 'jekyll-redirect-from'  # Handles redirects
gem 'jekyll-gist'
gem 'jekyll-mentions'

# SEO Enhancement gems
gem 'jekyll-minifier'  # Minifies HTML, CSS, and JavaScript
gem 'jekyll-relative-links'  # Converts relative links to absolute
gem 'jekyll-avatar'  # For author avatars
gem 'jekyll-tagging'  # Enhanced tagging support
gem 'jekyll-autoprefixer'  # Adds vendor prefixes to CSS
gem 'jekyll-compress-images'  # Optimizes images for better performance
gem 'jekyll-include-cache'  # Improves build performance
gem 'jekyll-last-modified-at'  # Adds last modified timestamps

# Development dependencies
group :development do
  gem 'jekyll-admin' # Optional: For easy CMS-like interface
  gem 'bundler', '~> 2.0'
  gem 'webrick'  # For local server
end
