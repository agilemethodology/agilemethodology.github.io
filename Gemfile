source 'https://rubygems.org'

# Jekyll and related gems
gem 'jekyll', '~> 4.2'
gem 'jekyll-seo-tag'
gem 'jekyll-sitemap'
gem 'jekyll-feed'
gem 'jekyll-paginate-v2'
gem 'jekyll-assets', '~> 3.0'
gem 'jekyll-archives', '~> 0.2.0'
gem 'jekyll-sass-converter', '~> 2.0'
gem 'jekyll-redirect-from'
gem 'jekyll-gist'
gem 'jekyll-mentions'

# Development dependencies
group :development do
  gem 'jekyll-admin' # Optional: For easy CMS-like interface
  gem 'bundler', '~> 2.0'
  gem 'webrick'  # For local server, might be needed if not already available in Ruby
end
